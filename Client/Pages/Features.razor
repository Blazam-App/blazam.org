@page "/features"
<PageTitle>Features - Blazam</PageTitle>

<MudText Typo=Typo.h1>Features</MudText>

<MudCarousel Class="mud-width-full" Style="height:400px;" TData=object>
    <MudCarouselItem>
        <div class="d-flex" style="height:100%">
            <MudImage Src="img/screens/user-autocomplete.png" Alt="Search Autocompletion" />
            <MudText TextWeight=TextWeight.Bold>Search Auto-Completion</MudText>
        </div>
    </MudCarouselItem>
    <MudCarouselItem>
        <div class="d-flex" style="height:100%">

            <MudImage Src="img/screens/user-result.png" Alt="User Management" />
            <MudText TextWeight=TextWeight.Bold>User,Group,Computer, and OU Management</MudText>
        </div>

    </MudCarouselItem>
    <MudCarouselItem>
        <div class="d-flex" style="height:100%">

            <MudImage Src="img/screens/assign-to.png" Alt="Copy Group Assignments" />
            <MudText TextWeight=TextWeight.Bold>Copy group assignments from one user/group to another user/group/computer</MudText>
        </div>

    </MudCarouselItem>
    <MudCarouselItem>
        <div class="d-flex" style="height:100%">

            <MudImage Src="img/screens/create-user-step2.png" Alt="Templated User Creation" />
            <MudText TextWeight=TextWeight.Bold>Admin templated and application guided user creation simplifies the process</MudText>
        </div>

    </MudCarouselItem>
    <MudCarouselItem>
        <div class="d-flex" style="height:100%">

            <MudImage Src="img/screens/create-user-step3.png" Alt="Prefill fields or let users enter data" />
            <MudText TextWeight=TextWeight.Bold>Prefill and select data entry fields in Active Directory for your templates</MudText>
        </div>

    </MudCarouselItem>
    <MudCarouselItem>
        <div class="d-flex" style="height:100%">

            <MudImage Src="img/screens/create-user-confirm.png" Alt="User Creation Confirmation" />
            <MudText TextWeight=TextWeight.Bold>All actions in the application ask for user confirmation</MudText>
        </div>

    </MudCarouselItem>
    <MudCarouselItem>
        <div class="d-flex" style="height:100%">

            <MudImage Src="img/screens/computer-result.png" Alt="Computer Drives and User Sessions" />
            <MudText TextWeight=TextWeight.Bold>Get advanced deep Computer inspection and management, such as inpecting drive usage, manage user sessions, kill a process, reboot a machine, and more...</MudText>
        </div>

    </MudCarouselItem>
    <MudCarouselItem>
        <div class="d-flex" style="height:100vh">

            <MudImage Src="img/screens/recycle-bin.png" Alt="Easy AD Recycle Bin Access" />
            <MudText TextWeight=TextWeight.Bold>Acceess the Active Directory Recycle Bin, right from your phone</MudText>
        </div>

    </MudCarouselItem>
</MudCarousel>
<MudGrid>
    <MudItem  xs="12" sm="3">
        Quickly search and edit users
    </MudItem>
    <MudItem xs="12" sm="9">

        <VideoTile Src="/vid/search-and-edit.webm" />
    </MudItem>





    <MudItem xs="12" sm="3">
        Move users, groups, and organizatinal units
    </MudItem>
    <MudItem xs="12" sm="9">

        <VideoTile Src="/vid/move-user.webm" />
    </MudItem>






    <MudItem xs="12" sm="3">
        Copy group assignments from other users and groups
    </MudItem>
    <MudItem xs="12" sm="9">

        <VideoTile Src="/vid/copy-group-assignements.webm" />
    </MudItem>
</MudGrid>

