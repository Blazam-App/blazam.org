@inherits LayoutComponentBase

<PageTitle>BLAZAM</PageTitle>
<ErrorBoundary>

<Layout Sider>
    
            <CascadingValue Value="this">

            <LayoutSider>
                <LayoutSiderContent>
                    <NavMenu />
                </LayoutSiderContent>
            </LayoutSider>

            <Layout Background="Background.Light" TextColor="TextColor.Dark">


            <LayoutContent Padding="Padding.Is1.OnX.OnMobile.Is2.OnX.OnTablet.Is3.OnX.OnDesktop.Is4.OnX.OnWidescreen.Is5.OnX.OnFullHD" Style="height: 100vh;overflow: auto;">
 
                                
                                @switch (CurrentPage)
{

    case Page.Index:
        <Home />

        break;
    case Page.Features:
        <Features />

        break;
    case Page.Download:
        <Download />
        break;
    case Page.Install:

        break;

}
           
                </LayoutContent>
                <LayoutFooter>
                    <AppFooter />
                    
                </LayoutFooter>
            </Layout>
            </CascadingValue>

</Layout>
</ErrorBoundary>

@code {
    public void Update() => StateHasChanged();
    Page _page;
    public Page CurrentPage
    {
        get => _page; set
        {
            if (_page == value) return;
            _page = value;
            InvokeAsync(StateHasChanged);

        }
    }

}